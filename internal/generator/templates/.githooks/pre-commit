#!/bin/bash
# GoForge Pre-commit Hook
# Runs: templ fmt, templ generate, gofumpt, golangci-lint
# =========================================================================

set -e

echo "ğŸ”§ Running pre-commit checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if required tools are installed
check_tool() {
    if ! command -v $1 &> /dev/null; then
        echo -e "${RED}Error: $1 is not installed${NC}"
        echo "Run 'make setup' to install required tools"
        exit 1
    fi
}

check_tool templ
check_tool gofumpt
check_tool golangci-lint

# Step 1: Format templ files
echo "ğŸ“ Formatting templ files..."
templ fmt .
echo -e "${GREEN}âœ“ Templ files formatted${NC}"
echo ""

# Step 2: Generate templ files
echo "âš™ï¸  Generating templ files..."
templ generate
echo -e "${GREEN}âœ“ Templ files generated${NC}"
echo ""

# Step 3: Format Go code with gofumpt
echo "ğŸ”¨ Formatting Go code with gofumpt..."
gofumpt -l -w .
echo -e "${GREEN}âœ“ Go code formatted${NC}"
echo ""

# Step 4: Stage any formatting changes
git add -u

# Step 5: Run golangci-lint
echo "ğŸ” Running golangci-lint..."
if ! golangci-lint run; then
    echo ""
    echo -e "${RED}âœ— Linting failed. Please fix the issues above.${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ Linting passed${NC}"
echo ""

echo -e "${GREEN}âœ… All pre-commit checks passed!${NC}"
